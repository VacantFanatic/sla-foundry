<div class="sla-panel" style="display: flex; flex-direction: column; border: 1px solid #444; background: rgba(0,0,0,0.2); margin-top: 5px; height: 200px;">
    
    {{!-- HEADER --}}
    <div class="sla-header-bar">WEAPONS, ARMOUR & EQUIPMENT</div>
    
    {{!-- SCROLLABLE LIST --}}
    <div class="scroll-list" style="flex: 1; overflow-y: auto; padding: 0;">
        <table class="sla-table" style="width: 100%; margin: 0;">
            <thead>
                <tr style="position: sticky; top: 0; background: #2a2a35; z-index: 5;">
                    <th style="width: 30px;"></th> {{!-- Icon Column --}}
                    <th style="text-align: left; padding: 5px; color: #fff;">NAME</th>
                    <th style="width: 50px; text-align: center; color: #fff;">QTY</th>
                    <th style="width: 50px; text-align: center; color: #fff;">WGT</th>
                    <th style="width: 60px;"></th>
                </tr>
            </thead>
            <tbody>
                {{#each gear as |item id|}}
                <tr class="item" data-item-id="{{item._id}}">
                    
                    {{!-- TOGGLE BUTTON (Dynamic Icon) --}}
                    <td style="text-align: center;">
                        <a class="item-toggle" title="{{#if item.system.equipped}}Unequip{{else}}Equip{{/if}} / {{#if item.system.active}}Deactivate{{else}}Use{{/if}}">
                            
                            {{!-- ARMOR ICON (Shield) --}}
                            {{#if (eq item.type "armor")}}
                                {{#if item.system.equipped}}
                                    <i class="fas fa-shield-alt" style="color: #39ff14;"></i>
                                {{else}}
                                    <i class="fas fa-shield-alt" style="color: #444;"></i>
                                {{/if}}
                            {{/if}}

                            {{!-- WEAPON ICON (Crosshairs) --}}
                            {{#if (eq item.type "weapon")}}
                                {{#if item.system.equipped}}
                                    <i class="fas fa-crosshairs" style="color: #ff4400;"></i>
                                {{else}}
                                    <i class="fas fa-crosshairs" style="color: #444;"></i>
                                {{/if}}
                            {{/if}}

                            {{!-- DRUG ICON (Syringe) --}}
                            {{#if (eq item.type "drug")}}
                                {{#if item.system.active}}
                                    <i class="fas fa-syringe" style="color: #ff4400; animation: pulse 2s infinite;"></i>
                                {{else}}
                                    <i class="fas fa-syringe" style="color: #444;"></i>
                                {{/if}}
                            {{/if}}
                            
                            {{!-- GENERIC ITEM (Dot) --}}
                            {{#if (eq item.type "item")}}
                                <i class="fas fa-circle" style="color: #333; font-size: 0.5em;"></i>
                            {{/if}}

                        </a>
                    </td>

                    {{!-- ICON + NAME (Click to Roll) --}}
                    <td class="item-name rollable" data-roll-type="item" style="padding-left: 5px; font-weight: bold; cursor: pointer;">
                        <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" style="vertical-align: middle; margin-right: 5px; border: 1px solid #555;"/>
                        {{item.name}}
                    </td>

                    {{!-- QUANTITY --}}
                    <td>
                        <input type="number" value="{{item.system.quantity}}" readonly style="text-align: center; background: transparent; border: none; color: #eee;"/>
                    </td>

                    {{!-- WEIGHT --}}
                    <td>
                        <input type="number" value="{{item.system.weight}}" readonly style="text-align: center; background: transparent; border: none; color: #eee;"/>
                    </td>

                    {{!-- CONTROLS --}}
                    <td class="item-controls" style="text-align: center;">
                        <a class="item-edit" title="Edit Item" style="margin-right:5px;"><i class="fas fa-edit"></i></a>
                        <a class="item-delete" title="Delete Item" style="color:#f55;"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
                
                {{#unless gear}}
                    <tr><td colspan="5" style="padding:10px; color:#555; text-align: center; font-style:italic;">Inventory is empty...</td></tr>
                {{/unless}}
            </tbody>
        </table>
    </div>
</div>