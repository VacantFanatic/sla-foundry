<div class="flexcol full-height" style="border: 1px solid #444; background: rgba(0,0,0,0.2); min-height: 150px;">
    <div class="sla-header-bar" style="background: #3a003a; border-color: #8a2be2;">DISCIPLINES</div>
    <div class="scroll-list" style="flex: 1; overflow-y: auto; padding: 0;">
        <table class="sla-table" style="width: 100%; margin: 0;">
            <thead>
                <tr style="position: sticky; top: 0; background: #2a2a35; z-index: 5;">
                    <th style="text-align: left; padding: 5px; color: #fff;">NAME</th>
                    <th style="width: 50px; text-align: center; color: #fff;">RANK</th>
                    <th style="width: 40px;"></th>
                </tr>
            </thead>
            <tbody>
                {{#each disciplines as |item id|}}
                <tr class="item" data-item-id="{{item._id}}">
                    <td class="item-name" style="padding-left: 5px; font-weight: bold; cursor: pointer;">{{item.name}}</td>
                    <td><input type="number" value="{{item.system.rank}}" readonly style="text-align: center; background: transparent; border: none; color: #eee;"/></td>
                    <td class="item-controls" style="text-align: center;">
                        <a class="item-edit"><i class="fas fa-edit"></i></a>
                        <a class="item-delete"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>