<div class="form-group">
    <label>PV</label>
    <input type="number" name="system.pv" value="{{system.pv}}" />
</div>

<div class="form-group">
    <label>Resist</label>
    <div class="flexrow">
        <input type="number" name="system.resistance.value" value="{{system.resistance.value}}" placeholder="Cur" /> /
        <input type="number" name="system.resistance.max" value="{{system.resistance.max}}" placeholder="Max" />
    </div>
</div>

{{!-- POWERED ARMOR SECTION (Full Width Panel) --}}
<div class="sla-panel" style="grid-column: 1 / -1; margin-top: 10px;">
    <div class="sla-header-bar" style="display:flex; align-items:center; justify-content:space-between;">
        <span>Powered Armor Systems</span>
        <div style="display:flex; align-items:center;">
            <label style="margin-right:5px; font-size:0.8em; color:#ccc;">Enable:</label>
            <input type="checkbox" name="system.powered" {{checked system.powered}} />
        </div>
    </div>

    {{#if system.powered}}
    <div class="grid grid-2col" style="gap: 10px; padding: 5px;">
        <div class="form-group flexrow" style="align-items:center;">
            <label style="flex:1;">STR Bonus</label>
            <input type="number" name="system.mods.str" value="{{system.mods.str}}" placeholder="0"
                style="flex:0 0 50px; text-align:center; height:24px;" />
        </div>
        <div class="form-group flexrow" style="align-items:center;">
            <label style="flex:1;">DEX Bonus</label>
            <input type="number" name="system.mods.dex" value="{{system.mods.dex}}" placeholder="0"
                style="flex:0 0 50px; text-align:center; height:24px;" />
        </div>
        <div class="form-group flexrow" style="align-items:center;">
            <label style="flex:1;">Close mv.</label>
            <input type="number" name="system.mods.move.closing" value="{{system.mods.move.closing}}" placeholder="0"
                style="flex:0 0 50px; text-align:center; height:24px;" />
        </div>
        <div class="form-group flexrow" style="align-items:center;">
            <label style="flex:1;">Rush mv.</label>
            <input type="number" name="system.mods.move.rushing" value="{{system.mods.move.rushing}}" placeholder="0"
                style="flex:0 0 50px; text-align:center; height:24px;" />
        </div>
    </div>
    {{else}}
    <div style="padding:10px; text-align:center; font-style:italic; color:#777; font-size:0.9em;">
        Systems Offline
    </div>
    {{/if}}
</div>