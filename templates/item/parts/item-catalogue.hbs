{{!-- Item Catalogue Dispatcher: Routes to appropriate partial based on item type --}}
{{!-- In ApplicationV2, all context from _prepareContext is available directly --}}
{{#with item as |itemData|}}
{{!-- Physical Items --}}
{{#if (eq itemData.type "weapon")}}
{{> "systems/sla-industries/templates/item/parts/item-physical-weapon.hbs" item=itemData}}
{{else if (eq itemData.type "armor")}}
{{> "systems/sla-industries/templates/item/parts/item-physical-armor.hbs"}}
{{else if (eq itemData.type "magazine")}}
{{> "systems/sla-industries/templates/item/parts/item-physical-magazine.hbs"}}
{{else if (eq itemData.type "explosive")}}
{{> "systems/sla-industries/templates/item/parts/item-physical-explosive.hbs"}}
{{else if (eq itemData.type "drug")}}
{{> "systems/sla-industries/templates/item/parts/item-physical-drug.hbs"}}
{{else if (eq itemData.type "item")}}
{{> "systems/sla-industries/templates/item/parts/item-physical-item.hbs"}}
{{!-- Non-Physical Items --}}
{{else if (or (eq itemData.type "skill") (eq itemData.type "trait"))}}
{{> "systems/sla-industries/templates/item/parts/item-academic.hbs" item=itemData config=config}}
{{else if (or (eq itemData.type "ebb") (eq itemData.type "ebbFormula") (eq itemData.type "discipline"))}}
{{> "systems/sla-industries/templates/item/parts/item-spectral.hbs"}}
{{else if (or (eq itemData.type "species") (eq itemData.type "package"))}}
{{> "systems/sla-industries/templates/item/parts/item-dossier.hbs"}}
{{/if}}
{{/with}}