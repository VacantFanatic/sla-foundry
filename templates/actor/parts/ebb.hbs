<div class="sla-panel" style="border-color: #8a2be2;">
    {{!-- HEADER --}}
    <div class="sla-header-bar" style="background: #3a003a; border-color: #8a2be2;">EBB FORMULAS</div>
    
    {{!-- LIST --}}
    <div class="scroll-list">
        <table class="sla-table">
            <thead>
                <tr>
                    <th style="text-align: left; padding-left: 5px;">FORMULA</th>
                    <th style="width: 50px; text-align: center;">COST</th>
                    <th style="width: 60px;"></th>
                </tr>
            </thead>
            <tbody>
                {{#each ebbFormulas as |item id|}}
                <tr class="item" data-item-id="{{item._id}}">
                    <td class="item-name" style="padding-left: 5px; font-weight: bold; cursor: pointer;" title="Discipline: {{item.system.discipline}}">
                        <i class="fas fa-magic" style="margin-right: 5px; color: #8a2be2;"></i>
                        <span class="rollable" data-roll-type="item">{{item.name}}</span> 
                    </td>
                    <td style="text-align: center;">{{item.system.cost}}</td>
                    <td class="item-controls" style="text-align: center;">
                        <a class="item-edit" title="Edit Formula"><i class="fas fa-edit"></i></a>
                        <a class="item-delete" title="Delete Formula"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>