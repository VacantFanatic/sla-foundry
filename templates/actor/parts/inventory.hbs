<div class="sla-panel" style="display: flex; flex-direction: column; border: 1px solid #444; background: rgba(0,0,0,0.2); margin-top: 5px; height: 200px;">
    
    <div class="sla-header-bar">WEAPONS, ARMOUR & EQUIPMENT</div>
    
    <div class="scroll-list" style="flex: 1; overflow-y: auto; padding: 0;">
        <table class="sla-table" style="width: 100%; margin: 0;">
            <thead>
                <tr style="position: sticky; top: 0; background: #2a2a35; z-index: 5;">
                    <th style="width: 30px;"></th>
                    <th style="text-align: left; padding: 5px; color: #fff;">NAME</th>
                    <th style="width: 80px; text-align: center; color: #fff;">AMMO</th> {{!-- NEW COLUMN --}}
                    <th style="width: 40px; text-align: center; color: #fff;">QTY</th>
                    <th style="width: 40px; text-align: center; color: #fff;">WGT</th>
                    <th style="width: 60px;"></th>
                </tr>
            </thead>
            <tbody>
                {{#each gear as |item id|}}
                <tr class="item draggable" data-item-id="{{item._id}}">
                    
                    {{!-- TOGGLE BUTTON --}}
                    <td style="text-align: center;">
                        <a class="item-toggle" title="{{#if item.system.equipped}}Unequip{{else}}Equip{{/if}} / Use">
                            {{#if (eq item.type "armor")}}
                                <i class="fas fa-shield-alt" style="color: {{#if item.system.equipped}}#39ff14{{else}}#444{{/if}};"></i>
                            {{/if}}
                            {{#if (eq item.type "weapon")}}
                                <i class="fas fa-crosshairs" style="color: {{#if item.system.equipped}}#ff4400{{else}}#444{{/if}};"></i>
                            {{/if}}
                            {{#if (eq item.type "drug")}}
                                <i class="fas fa-syringe" style="color: {{#if item.system.active}}#ff4400{{else}}#444{{/if}}; {{#if item.system.active}}animation: pulse 2s infinite;{{/if}}"></i>
                            {{/if}}
                            {{#if (eq item.type "item")}}
                                <i class="fas fa-circle" style="color: #333; font-size: 0.5em;"></i>
                            {{/if}}
                        </a>
                    </td>

                    {{!-- NAME --}}
                    <td class="item-name rollable" data-roll-type="item" style="padding-left: 5px; font-weight: bold; cursor: pointer;">
                        <img src="{{item.img}}" width="24" height="24" style="vertical-align: middle; margin-right: 5px; border: 1px solid #555;"/>
                        {{item.name}}
                    </td>

                    {{!-- AMMO DISPLAY & RELOAD --}}
                    <td style="text-align: center; white-space: nowrap;">
                        {{#if (and (eq item.type "weapon") (gt item.system.maxAmmo 0))}}
                            <span style="font-size: 0.8em; color: {{#if (eq item.system.ammo 0)}}#f55{{else}}#aaa{{/if}};">
                                {{item.system.ammo}}/{{item.system.maxAmmo}}
                            </span>
                            <a class="item-reload" title="Reload" style="margin-left: 5px; color: #39ff14;">
                                <i class="fas fa-sync-alt"></i>
                            </a>
                        {{/if}}
                    </td>

                    {{!-- QTY --}}
                    <td><input type="number" value="{{item.system.quantity}}" readonly style="text-align: center; background: transparent; border: none; color: #eee;"/></td>

                    {{!-- WEIGHT --}}
                    <td><input type="number" value="{{item.system.weight}}" readonly style="text-align: center; background: transparent; border: none; color: #eee;"/></td>

                    {{!-- CONTROLS --}}
                    <td class="item-controls" style="text-align: center;">
                        <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                        <a class="item-delete" title="Delete" style="color:#f55;"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
                
                {{#unless gear}}<tr><td colspan="6" style="padding:10px; color:#555; text-align: center; font-style:italic;">Inventory is empty...</td></tr>{{/unless}}
            </tbody>
        </table>
    </div>
</div>