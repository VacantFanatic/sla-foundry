<section class="ebb-section">

    <div class="inventory-header flexrow">
        <div class="item-image"></div>
        <div class="item-name">POWER NAME</div>
        <div class="item-prop">COST</div>
        <div class="item-prop">MAINT</div>
        <div class="item-controls">
            <a class="item-control item-create" title="Create Power" data-type="ebb"><i class="fas fa-plus"></i> Add</a>
        </div>
    </div>

    <ol class="items-list">
        {{#each ebb as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-image">
                <a class="rollable" data-roll-type="item">
                    <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                </a>
            </div>
            <h4 class="item-name">{{item.name}}</h4>
            
            <div class="item-prop">{{item.system.cost}}</div>
            
            <div class="item-prop">{{item.system.maintenance}}</div>

            <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </li>
        {{/each}}
    </ol>

</section>