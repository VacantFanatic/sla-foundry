<form class="{{cssClass}} sla-sheet" autocomplete="off">

    {{!-- HEADER & STATS --}}
    {{> "systems/sla-industries/templates/partials/header-card.hbs"}}

    <div class="stats-strip-container">
        {{> "systems/sla-industries/templates/partials/stats.hbs"}}
    </div>

    {{!-- NAVIGATION --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="main">Main</a>
        <a class="item" data-tab="ebb">Combat</a>
        <a class="item" data-tab="inventory">Inventory</a>
        <a class="item" data-tab="biography">Bio & Traits</a>
    </nav>

    {{!-- SHEET BODY --}}
    <section class="sheet-body">

        {{!-- MAIN TAB (Skills & Secondary) --}}
        <div class="tab" data-group="primary" data-tab="main">
            {{> "systems/sla-industries/templates/partials/main-tab.hbs"}}
        </div>

        {{!-- COMBAT TAB (Wounds, Loadout, Ebb) --}}
        <div class="tab" data-group="primary" data-tab="ebb">
            {{!-- UPDATED: Now points to the new combined partial --}}
            {{> "systems/sla-industries/templates/partials/combat-tab.hbs"}}
        </div>

        {{!-- INVENTORY TAB --}}
        <div class="tab" data-group="primary" data-tab="inventory">
             {{> "systems/sla-industries/templates/partials/inventory-tab.hbs"}}
        </div>

        {{!-- BIO TAB --}}
        <div class="tab" data-group="primary" data-tab="biography">
            {{> "systems/sla-industries/templates/partials/bio-traits-tab.hbs"}}
        </div>

    </section>
</form>