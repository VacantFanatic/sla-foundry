<div class="sla-chat-card" style="background:#222; border:1px solid #D05E1A; padding:5px; color:#eee;">
    
    <h3 style="color:#D05E1A; border-bottom:1px solid #555; margin:0 0 5px 0;">
        DAMAGE ROLL
    </h3>

    {{!-- RESULT BOXES --}}
    <div style="display:flex; gap:5px; margin-bottom:10px;">
        
        {{!-- DAMAGE TOTAL --}}
        <div style="flex:1; background:rgba(0,0,0,0.3); padding:5px; text-align:center; border:1px solid #555;">
            <div style="font-size:0.8em; color:#ccc;">DAMAGE</div>
            <div style="font-size:1.8em; font-weight:bold; color:#fff;">{{damageTotal}}</div>
        </div>

        {{!-- AD VALUE (The value passed from the button) --}}
        <div style="flex:0 0 60px; background:rgba(0,0,0,0.3); padding:5px; text-align:center; border:1px solid #555;">
            <div style="font-size:0.8em; color:#ccc;">AD</div>
            <div style="font-size:1.8em; font-weight:bold; color:#D05E1A;">{{adValue}}</div>
        </div>
    </div>

    {{!-- APPLY BUTTONS (Passes the AD along to the listener) --}}
    <div style="display:flex; flex-direction:column; gap:4px;">
        <button class="apply-damage-btn" 
                data-target="target" 
                data-dmg="{{damageTotal}}" 
                data-ad="{{adValue}}"
                style="background:#333; border:1px solid #555; color:#fff;">
            <i class="fas fa-crosshairs"></i> Apply to Target
        </button>
        
        <button class="apply-damage-btn" 
                data-target="selected" 
                data-dmg="{{damageTotal}}" 
                data-ad="{{adValue}}"
                style="background:#333; border:1px solid #555; color:#fff;">
            <i class="fas fa-expand"></i> Apply to Selected
        </button>
    </div>

    <div style="margin-top:5px; font-size:0.8em; color:#bbb; font-style:italic; text-align:center;">
        {{{flavor}}}
    </div>
</div>