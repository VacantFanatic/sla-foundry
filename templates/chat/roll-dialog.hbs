<form>
    <div class="form-group">
        <label>Ammunition</label>
        <div class="form-fields">
            <input type="text" value="{{ammoName}}" disabled/>
        </div>
    </div>
    
    <div class="form-group">
        <label>Attack Result (Preview)</label>
        <div class="form-fields">
            <span style="line-height: 24px;">{{stats.damage}} DMG / {{stats.ad}} AD</span>
        </div>
    </div>

    <div class="form-group">
        <label>Situational Modifier</label>
        <div class="form-fields">
            <input type="text" name="bonus" value="0" placeholder="+/- Mod"/>
        </div>
    </div>
</form>